# Environment Configuration Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control

# ===========================================
# Google Gemini API Configuration
# ===========================================
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ===========================================
# Database Configuration
# ===========================================
# MySQL Database Connection
DATABASE_URL=jdbc:mysql://localhost:3306/educhain_db?createDatabaseIfNotExist=true
DATABASE_USERNAME=root
DATABASE_PASSWORD=your_database_password

# ===========================================
# File Upload Configuration
# ===========================================
# Directory for uploaded files (default: ./uploads/)
FILE_UPLOAD_DIR=./uploads/

# ===========================================
# Server Configuration
# ===========================================
# Server port (default: 8080)
PORT=8080

# Frontend URL for CORS (default: http://localhost:3000)
FRONTEND_URL=http://localhost:3000

# ===========================================
# reCAPTCHA Configuration
# ===========================================
# Get your secret key from: https://www.google.com/recaptcha/admin
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# ===========================================
# Blockchain Configuration (Optional)
# ===========================================
# Ganache or Ethereum node RPC URL
BLOCKCHAIN_RPC_URL=http://localhost:7545
BLOCKCHAIN_CONTRACT_ADDRESS=
BLOCKCHAIN_PRIVATE_KEY=

# ===========================================
# AI Verification Configuration (Optional)
# ===========================================
# Enable or disable Gemini verification (true/false)
GEMINI_VERIFICATION_ENABLED=true

# Minimum confidence threshold for verification (0.0 - 1.0)
GEMINI_CONFIDENCE_THRESHOLD=0.75
